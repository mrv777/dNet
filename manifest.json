{
  "manifest_version": 2,
  "name": "dNet",
  "description": "Access a decentralized internet on the Ardor blockchain platform using *.ardor URLs",
  "version": "0.6",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "*://*.ardor/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": { 
    "128": "icon128.png" 
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "images/*.png",
    "index.html",
    "inject.js"
  ]
}